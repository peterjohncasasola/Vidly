<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
  <div id="notification" class="toast hide bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">Hello, world! This is a toast message.</div>
      <button type="button" class="btn-close me-2 btn-close-white m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
</div>
